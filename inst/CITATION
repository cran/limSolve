citHeader("To cite limSolve in publications use")

## R >= 2.8.0 passes package metadata to citation().
if(!exists("meta") || is.null(meta)) meta <- packageDescription("limSolve")
year <- sub("-.*", "", meta[["Date"]])
note <- sprintf("R package version %s", meta[["Version"]])

citEntry(entry = "Manual",
         title = "{limSolve}: Solving Linear Inverse Models",
         author = personList(as.person("Karline Soetaert"), 
                             person("Karel", "Van den Meersche"),
			     person("Dick", "Van Oevelen")),
         year = year,
         note = note,
         url = "http://CRAN.R-project.org/package=limSolve",
         textVersion = paste("Karline Soetaert, Karel Van den Meersche, Dick Van Oevelen",
   	       sprintf("(%s).", year),	 
               "limSolve: Solving Linear Inverse Models.",
	       paste(note, ".", sep = ""),
               "URL http://CRAN.R-project.org/package=limSolve")
)

citEntry(entry = "Article",
  title        = "{xsample()}: An {R} Function for Sampling Linear Inverse Problems",
  author       = personList(person("Karel", "Van den Meersche"),
                   as.person("Karline Soetaert"),
                   person("Dick", "Van Oevelen")),
  journal      = "Journal of Statistical Software, Code Snippets",
  year         = "2009",
  volume       = "30",
  number       = "1",
  pages        = "1--15",
  url          = "http://www.jstatsoft.org/v30/c01/",
  textVersion  = paste("Karel Van den Meersche, Karline Soetaert, Dick Van Oevelen (2009).",
        "xsample(): An R Function for Sampling Linear Inverse Problems.",
        "Journal of Statistical Software, Code Snippets 30(1), 1-15.",
        "URL http://www.jstatsoft.org/v30/c01/."),
  header = "If you use xsample(), please cite:"
)


